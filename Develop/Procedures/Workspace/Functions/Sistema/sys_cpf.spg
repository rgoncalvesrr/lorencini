/**
   Validação do C.P.F. sem máscara

   Autor	Fabio Crepaldi Carvalho
   Data  02/06/2006 20:04

   Parâmetro   cpf   número a validar.

	Histórico
	------------------------------------------------------------------
	  15/11/2008 12:11:02  v1.0  Ricardo Gonçalves.
	     [*] Reformulação da rotina.
*/
Create or Replace Function sys_cpf(
   in cpf varchar)
Returns void
as $$
Declare
   ErrorCode integer;
Begin
   ErrorCode := sys_cpf_check(cpf);

   if ErrorCode = 1 then
      Raise '[[C.P.F. inválido. O CPF deve ser composto de 11 números]]';
   end if;

   if ErrorCode = 2 then
      raise '[[C.P.F. % inválido. Verifique.]]', mask_00003(cpf);
   end if;
End;
$$ language 'plpgsql';