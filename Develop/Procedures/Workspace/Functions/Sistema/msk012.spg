Create or Replace Function msk012
(  in in_numero  numeric,
   in in_decimais integer )
Returns varchar
As $$
Declare
   vmask    varchar;
Begin
   vmask:= repeat('9', in_decimais - 1)||'0';
   return replace(trim(to_char(coalesce(in_numero,0), '9 999 990D'||vmask)), ' ', '.');
End;
$$ language plpgsql;