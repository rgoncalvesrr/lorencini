/**
   Gera agendamento na SS084

	@author    Ricardo Gonçalves
	@date      30/10/2017
	@trigger   SS104 A IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso   
*/
CREATE OR REPLACE FUNCTION a_sys_schedules()
  RETURNS trigger AS
$$
BEGIN   
   if tg_op = 'DELETE' then
      delete 
        from [(ss084)] 
       where codtable = 'SS104'
         and ss084_recno = old.recno
         and estado = 0;
      return null;
   end if;
   
   if tg_op = 'INSERT' then
      insert into [(ss084)]
         (servico, codtable, ss084_recno, agendado_para, estagio)
      values
         (7,       'SS104', new.recno,    new.execucao, 1);
   else
      -- Gerar próximo agendamento
      if new.estado = 1 and old.estado = 0 then
         perform sys_00031####???(new.agendamento);
      end if;   
   end if;

   return null;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;