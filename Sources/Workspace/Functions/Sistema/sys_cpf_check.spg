/**
   Checa se o CPF informado é valido

   Autor	   Ricardo Gonçalves
   Data     21/11/2008 21:00:02

   Retorno  0 - Código Ok
            1 - Composição inválida
            2 - CPF inválido

	Histórico
	------------------------------------------------------------------
      21/11/2008 21:01:44  v1.0  Ricardo Gonçalves.
         [+] Versão inicial.
*/
Create or Replace Function sys_cpf_check(
   in cpf varchar(11))
Returns integer
as $$
Declare
   -- Variaveis
   i        INT4;           -- Contador
   iProd    INT4;           -- Somatório
   iMult    INT4;           -- Fator
   iDigito  INT4;           -- Digito verificador calculado
   vcpf     varchar(11);
Begin
   if not cpf ~ '[0-9]{11}' then
      return 1;
   end if;

   -- *****************************************************
   -- Verifica a validade do CPF
   -- *****************************************************

   -- primeiro digito
   iDigito := 0;
   iProd := 0;
   vcpf := substring(cpf, 1, 9);

   for i in 1..9 loop
      iProd := iProd + substring(vcpf, i, 1)::int2 * (11 - i);
   end loop;

   iDigito := 11 - iProd % 11;

   IF iDigito >= 10 THEN
      iDigito := 0;
   END IF;

   vcpf := vcpf || iDigito::varchar(1);

   -- segundo digito
   iProd := 0;
   FOR i IN 1..10 LOOP
      iProd := iProd + substring(vcpf, i, 1)::int2 * (12 - i);
   END LOOP;

   iDigito := 11 - iProd % 11;

   IF iDigito >= 10 THEN
      iDigito := 0;
   END IF;

   vcpf := vcpf || iDigito::varchar(1);

   if vCpf <> cpf then
      return 2;
   end if;

   return 0;
End;
$$ language 'plpgsql';